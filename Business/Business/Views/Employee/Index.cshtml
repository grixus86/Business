@{
<!DOCTYPE html>
<html>
<head>
    <title>EMPLOYEE LIST</title>
</head>
<body>
    <h1>DETAILS</h1>
    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="Views" asp-controller="Employee" asp-action="AddEmployee">
                Add User <i class="bx bx-plus"></i>
            </a>
            <a class="btn btn-success mb-3" asp-area="Views" asp-controller="Department" asp-action="AddDepartment">
                Add Department <i class="bx bx-plus"></i>
            </a>
            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <tr>
                    <th>EmployeeID</th>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Department</th>
                    <th>Transaction</th>
                </tr>
                <tbody class="table-border-bottom-0">
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.Email</td>
                            <td>@employee.Department</td>
                            <td>
                                <form method="post" action="@Url.Action("DeleteEmployee", "Employee")">
                                <a class="btn btn-success" href="@Url.Action("EditEmployee", "Employee", new { id = employee.Id })">Edit</a>
                                    <input type="hidden" name="id" value="@employee.Id" />
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this employee?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $(".btn-success").click(function (event) {
                event.preventDefault();
                var url = $(this).attr("href");
                window.location.href = url;
            });
        });
    </script>
</body>
</html>

}